<h1>商品列表</h1>

<table class="table">
  <thead>
    <tr>
      <th>名稱</th>
      <th>說明</th>
      <th>售價</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= link_to '加入購物車',add_cart_path(product.id), method: :put, class: "btn btn-danger addToCart" %> <%= link_to product.title, product %></td>
        <td><%= product.description %></td>
        <td><%= product.price %></td>
        <td><%= link_to '編輯', edit_product_path(product) %></td>
        <td><%= link_to '刪除', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to '新增商品', new_product_path, class: 'btn btn-success btn-sm' %>
